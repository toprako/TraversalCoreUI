@if (User.Identity.IsAuthenticated)
{
    <div class="leave-comment-form mt-5" id="reply">
        <h4 class="side-title mb-2">Sizde Bir Yorum Bırakın</h4>
        <p class="mb-4">
            İşaretli Alanları Doldurmanız Gerekmektedir.
        </p>
        <form method="post" asp-action="AddComment" asp-controller="Comment">
            <input type="hidden" name="DestinationID" value="@ViewBag.DestinationId" />
            <input type="hidden" name="AppUserID" value="@ViewBag.userID" />
            <div class="form-group">
                <textarea name="Content" class="form-control" placeholder="Yorumunuz*" required=""
                          spellcheck="false"></textarea>
            </div>
            <div class="submit text-right">
                <button class="btn btn-style btn-primary" type="submit" id="btnsave">Yorum Yap</button>
            </div>
        </form>
    </div>
}
else
{
    <h2>Yorum Yapabilmek İçin Üye Olmanız Gerekmektedir.</h2>
}

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>