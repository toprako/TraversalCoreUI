@model TraversalCoreUI.Models.LoginVM.UserRegisterViewModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		  content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<!-- //Meta tag Keywords -->
	<!--/Style-CSS -->
	<link rel="stylesheet" href="~/Web/css/style.css" type="text/css" media="all" />
	<!--//Style-CSS -->
</head>

<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>Traversal Rezervasyon</h5>
							<h3>Hesap Oluşturun </h3>
							<p>
								Birbirinden Deneyimli Rehberlerimiz Eşliğinde İskandinav  Ülkelerinin soğuğunu, Akdeniz Ülkelerinin Sıcaklığını Güzel Ülkemizin Kapadokya'dan  Sürmene'ye, Ölüdeniz'den Asos'a , Balkon Turundan Mısır Çöllerine Kadar Aklınıza Gelen Her Yere Bir Tık Uzaktayız. Seyahatlerimize Katılmak İçin Hemen Kayıt Olun...
							</p>
							<a href="#" class="read-more-1 btn">Hadi Başlayalım</a>
						</div>

					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Bize Katılın</h4>
						<p>Hemen Ücretsiz Hesap Oluştur</p>
					</div>
					<form method="post" class="signin-form">
						<div class="form-input">
							@Html.Label("Adınız","Adınız")
							@Html.TextBoxFor(x => x.Name)
							@Html.ValidationMessageFor(x => x.Name)					
						</div>
						<div class="form-input">
							@Html.Label("Soyadınız","Soyadınız")
							@Html.TextBoxFor(x => x.Surname)
							@Html.ValidationMessageFor(x => x.Surname)	
						</div>
						<div class="form-input">
							@Html.Label("Kullanıcı Adınız","Kullanıcı Adınız")
							@Html.TextBoxFor(x => x.UserName)
							@Html.ValidationMessageFor(x => x.UserName)
						</div>
						<div class="form-input">
							@Html.Label("Mail Adresiniz","Mail Adresiniz")
							@Html.TextBoxFor(x => x.Mail, new { @type = "email" })
							@Html.ValidationMessageFor(x => x.Mail)
						</div>
						<div class="form-input">
							@Html.Label("Şifreniz ","Şifreniz ")
							@Html.TextBoxFor(x => x.Password, new { @type = "password" })
							@Html.ValidationMessageFor(x => x.Password)
						</div>
						<div class="form-input">
							@Html.Label("Şifre Tekrar ","Şifre Tekrar ")
							@Html.TextBoxFor(x => x.ConfirmPassword, new { @type = "password" })
							@Html.ValidationMessageFor(x => x.ConfirmPassword)
						</div>
						@Html.ValidationSummary(false,"",new{@class = "text-danger",@style= "color: red"})
						<label class="container">
							Şartları Okudum <a href="#">Kabul Ediyorum</a>
							<input type="checkbox">
							<span class="checkmark"></span>
						</label>
						<button class="btn">Kayıt Ol</button>
					</form>
					<div class="copy-right text-center">
						<p>
							© @DateTime.Now.Year Tüm Hakları Saklıdır.
						</p>
					</div>
				</div>

			</div>

		</div>
	</section>
	<!-- //login-section -->
</body>

</html>