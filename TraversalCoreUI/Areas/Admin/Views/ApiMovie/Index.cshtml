@model List<TraversalCoreUI.Areas.Admin.Models.ApiMovieViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api IMDB Top 100 Listesi</h1>
<br />
<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Film Adı</th>
        <th>Imdb Puanı</th>
        <th>Yapım Yılı</th>
        <th>Fragman</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.rank</td>
            <td><img src="@item.image" width="80" height="80"/></td>
            <td>@item.title</td>
            <td>@item.rating</td>
            <td>@item.year</td>
            <td><a href="@item.trailer" class="btn btn-outline-dark">Fragmanı İzle</a></td>
        </tr>
    }
</table>

