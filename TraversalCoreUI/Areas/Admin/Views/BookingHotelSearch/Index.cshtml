@model TraversalCoreUI.Areas.Admin.Models.BookingHotelSearchViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int counter = 0;
}

<h1>Booking Otel Rezervasyon Sayfası</h1>
<br />
<h3>Booking Otel Rezervasyon Sayfası</h3>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Otel Resmi</th>
        <th>Otel Adı</th>
        <th>Otel Puanı</th>
        <th>Otel Değerlendirmesi</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model.results)
    {
        counter++;
        <tr>
            <td>@counter</td>
            <td><img src="@item.photoMainUrl" width="100" height="100"/></td>
            <td>@item.name</td>
            <td>@item.reviewScore</td>
            <td>@item.reviewScoreWord</td>
            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
        </tr>
    }

</table>